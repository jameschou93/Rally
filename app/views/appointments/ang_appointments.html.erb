<div ng-app="app">
  <div ng-controller="appointmentsCtrl" ng-init="setup()">
  <%= month_calendar do |date| %>
    <%= date.day %>
    <div ng-repeat="appointment in appointments">
    <button angular-popover template="Some content inside the popover" class="btn btn-primary" ng-if="appointment.date === <%= date.to_json %>">
        <p ng-click="show(appointment)">{{appointment.title}}</p>
    </button>

    </div>

    <% end %>
  <div id="show" class="well" style="visibility: hidden;">
  <p>{{selectedAppt.title}}</p>
  <p>{{selectedAppt.date}}</p>
  <p>{{selectedAppt.start_time}}</p>
  <p>{{selectedAppt.end_time}}</p>
  <p>{{selectedAppt.address}}</p>
  <p>{{selectedAppt.city}}</p>
  <p>{{selectedAppt.state}}</p>
  <p>{{selectedAppt.id}}</p>
  </div>
  <button ng-click="reveal()">
      Hello
    </button>
  <div id="models" style="visibility: hidden;">
    <p>Title: <input ng-model="selectedAppt.title" type="text"></p>
    <p>Date: <input ng-model="selectedDate" type="date" ></p>
    <p>Start Time: <input ng-model="selectedAppt.start_time" type="time"></p>
    <p>End Time: <input ng-model="selectedAppt.end_time" type="time"></p>
    <p>Address: <input ng-model="selectedAppt.address" type="text"></p>
    <p>City: <input ng-model="selectedAppt.city" type="text"></p>
    <p>State: <input ng-model="selectedAppt.state" type="text"></p>
    <p>Zip Code: <input value="selectedAppt.zip_code" type="number"></p>
    <input type="text" ng-model="appointmentId">
  </div>
   <button ng-click="updateAppt(selectedAppt.title, selectedAppt.date, selectedAppt.start_time, selectedAppt.end_time, selectedAppt.id)">Update</button> 
   <button id="create" style="visibility: hidden;" ng-click="createAppt(upTitle, upDate, upStart, upEnd, address, city, state, zip_code)">Create</button>

  </div>
</div>
